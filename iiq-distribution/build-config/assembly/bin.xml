<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>identityiq</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
<dependencySets>
    <dependencySet>
        <outputDirectory>${file.separator}</outputDirectory>
        <unpack>true</unpack>
        <scope>runtime</scope>
        <includes>
            <include>sailpoint:iiq-webapp:war</include>
        </includes>
    </dependencySet>
</dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../iiq-web/target/classes</directory>
            <outputDirectory>WEB-INF/classes</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../iiq-web/target/WEB-INF/lib</directory>
            <outputDirectory>WEB-INF/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
	<directory>${project.basedir}/../iiq-web/src/main/webapp</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <!-- Merge Accelerator Pack files Start -->
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/WEB-INF/lib</directory>
            <outputDirectory>WEB-INF/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/WEB-INF/classes/sailpoint/object</directory>
            <outputDirectory>WEB-INF/classes/sailpoint/object</outputDirectory>
            <includes>
                <include>*.hbm.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/WEB-INF/config</directory>
            <outputDirectory>WEB-INF/config</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/build-config/config</directory>
            <outputDirectory>WEB-INF/config</outputDirectory>
            <includes>
                <include>init-all.xml</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/images/icons</directory>
            <outputDirectory>images/icons</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/define/applications</directory>
            <outputDirectory>define/applications</outputDirectory>
            <includes>
                <include>IdentityIQLoopback.xhtml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/debug</directory>
            <outputDirectory>debug</outputDirectory>
            <includes>
                <include>apAbout.xhtml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/AcceleratorPack/web/WEB-INF/classes/sailpoint/web/messages</directory>
            <outputDirectory>WEB-INF/classes/sailpoint/web/messages</outputDirectory>
            <includes>
                <include>iiqCustom.properties</include>
            </includes>
        </fileSet>
        <!-- Merge Accelerator Pack files End-->
        <fileSet>
            <directory>${project.basedir}/../iiq-web/profiles/${build.profile.id}</directory>
            <outputDirectory>WEB-INF/classes</outputDirectory>
            <includes>
                <include>log4j.properties</include>
                <include>log4j2.properties</include>
                <include>iiq.properties</include>
                <include>iiq.cfg</include>
                <include>iiq.dat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../iiq-xml-config/target/config</directory>
            <outputDirectory>WEB-INF/config/custom</outputDirectory>
            <includes>
                <include>**/*.xml</include>
            </includes>
            <excludes>
                <exclude>sp.init-custom.xml</exclude>
            </excludes>
        </fileSet>
	<fileSet>
            <directory>${project.basedir}/../</directory>
            <outputDirectory>WEB-INF/config</outputDirectory>
            <includes>
                <include>**/sp.init-custom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../iiq-xml-config/target/config</directory>
            <outputDirectory>WEB-INF/config</outputDirectory>
            <includes>
                <include>**/sp.init-custom.xml</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
